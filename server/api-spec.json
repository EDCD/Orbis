{
  "info": {
    "title": "Orbis.zone API",
    "version": "1.0.0",
    "description": "Orbis"
  },
  "paths": {
    "/api/builds": {
      "post": {
        "summary": "/api/builds",
        "parameters": [],
        "responses": {
          "200": {
            "description": "A list of builds",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Builds"
                }
              }
            }
          }
        }
      }
    },
    "/api/builds/{id}": {
      "get": {
        "description": "A list of builds",
        "summary": "/api/builds/{id}",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of builds",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "/api/builds/{id}",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Build object",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Build"
                }
              }
            }
          },
          "404": {
            "description": "Build not found"
          }
        }
      }
    },
    "/api/builds/update": {
      "post": {
        "summary": "/api/builds/update",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Build successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildUpdate"
                }
              }
            }
          },
          "400": {
            "description": "No updates"
          },
          "401": {
            "description": "Not logged in"
          },
          "403": {
            "description": "Not authorized to modify this build"
          }
        }
      }
    },
    "/api/builds/add": {
      "post": {
        "summary": "/api/builds/add",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Ship successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildAdd"
                }
              }
            }
          },
          "400": {
            "description": "No body"
          },
          "401": {
            "description": "Not logged in"
          },
          "403": {
            "description": "Not authorized to add a build"
          }
        }
      }
    },
    "/api/likes": {
      "post": {
        "summary": "/api/likes",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Vote successfully cast",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Vote"
                }
              }
            }
          },
          "400": {
            "description": "No body"
          },
          "401": {
            "description": "Not logged in"
          },
          "500": {
            "description": "Server failed"
          }
        }
      }
    }
  },
  "swagger": "2.0",
